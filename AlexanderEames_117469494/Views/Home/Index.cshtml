@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
  <!--  <h1 class="display-4">This is my Personal Webpage</h1>
    <p>Where I'll put my CV and News</p> -->

    <!-- ======= Hero Section ======= -->
    <section id="hero">
        <div id="heroCarousel" class="carousel slide carousel-fade" data-ride="carousel">

            <div class="carousel-inner" role="listbox">

                <!-- Slide 1 -->
                <div class="carousel-item" style="background-image: url(/img/slide/SlidePic4.jpg);">
                    <div class="carousel-container">
                        <div class="carousel-content animate__animated animate__fadeInUp">
                            <h2>Welcome to My Website</h2>
                            <p>
                                Thank you for visiting my website.<br /><br />
                                I am a 22 year old student curently completing my final year of Business Information Systems in University College Cork.
                                I am an active individual with a passion for technology, sports and music.
                            </p>
                            <div class="text-center"><a asp-controller="About" asp-action="About" class="btn-get-started">About Me</a></div>
                        </div>
                    </div>
                </div>

                <!-- Slide 2 -->
                <div class="carousel-item" style="background-image: url(/img/slide/SlidePic2.jpg);">
                    <div class="carousel-container">
                        <div class="carousel-content animate__animated animate__fadeInUp">
                            <h2>My Experience</h2>
                            <p>I am a hardworking and driven individual. I graduated from Bandon Grammar School in 2017 and have been involved in numerous projects since, both professional and academic.</p>
                            <div class="text-center" style="display:inline-block;"><a asp-controller="Experience" asp-action="Education" class="btn-get-started">Education</a></div>
                            <div class="text-center" style="display:inline-block;"><a asp-controller="Experience" asp-action="Work" class="btn-get-started">Professional Experience</a></div>
                            <div class="text-center" style="display:inline-block;"><a asp-controller="Experience" asp-action="Volunteering" class="btn-get-started">Volunteer Experience</a></div>
                        </div>
                    </div>
                </div>

                <!-- Slide 3 -->
                <div class="carousel-item active" style="background-image: url(/img/slide/SlidePic3.jpg);">
                    <div class="carousel-container">
                        <div class="carousel-content animate__animated animate__fadeInUp">
                            <h2>Contact Me</h2>
                            <p>If you would like to reach out to me, feel free to email me, connect with me on linkedIn, or on other social media which you can find here.</p>
                            <div class="text-center"><a asp-controller="Contact" asp-action="Contact" class="btn-get-started">Contact Me</a></div>
                        </div>
                    </div>
                </div>

            </div>

            <a class="carousel-control-prev" href="#heroCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon bx bx-left-arrow" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>

            <a class="carousel-control-next" href="#heroCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon bx bx-right-arrow" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

            <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

        </div>
    </section><!-- End Hero -->

</div>


